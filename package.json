{
  "name": "study-group-site",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*"
    ]
  },
  "scripts": {
    "dev:web": "cd apps/web && npm run dev",
    "dev:api": "cd apps/api && npm run dev",
    "dev": "npm run dev:web",
    "build": "npm run build:web",
    "build:web": "cd apps/web && npm run build",
    "build:api": "cd apps/api && npm run build",
    "prisma:generate": "cd apps/database && prisma generate",
    "prisma:migrate": "cd apps/database && prisma migrate dev",
    "prisma:studio": "cd apps/database && prisma studio",
    "prisma:seed": "cd apps/database && ts-node prisma/seed.ts",
    "prisma:reset": "cd apps/database && prisma migrate reset"
  },
  "devDependencies": {
    "eslint": "^8.38.0",
    "prettier": "3.5.0",
    "typescript": "^5.1.6"
  }
}
